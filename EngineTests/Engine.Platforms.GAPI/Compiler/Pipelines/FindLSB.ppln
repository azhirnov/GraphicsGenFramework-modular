#ifdef SHADER
#if SHADER & SH_COMPUTE

layout(binding=0, std430) writeonly buffer FindLSB_SSBO
{
	 uint	results[16];

} ssb;

void main ()
{
	for (int i = 0; i < ssb.results.length(); ++i)
	{
		int  j1 = i*2;
		int  j2 = 32 - j1;
		int  j3 = i+3;
		uint v  = uint( (1 << j1) | (1 << j2) | (1 << j3) );

		ssb.results[i] = findLSB( v );
	}
}

#endif
#endif	// SHADER
